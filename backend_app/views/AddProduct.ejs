<!doctype html>
<html lang="en">
  <head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
  </head>
  <body>
      <div class="container">
          <div class="row">
              <div class="col-8 mx-auto">
                  <form action="/AddProduct" method="POST">
                  <div class="form-group">
                    <label for="_ProductID">ID Sản phầm</label>
                    <input type="text" name="_ProductID" id="_ProductID" class="form-control" placeholder="Nhập ID sản phẩm "aria-describedby="name_text">
                    <small id="name_text" class="text-muted">ID Sản phầm</small>
                  </div>    
                  <div class="form-group">
                    <label for="_NameProduct">Nhập tên sản phẩm</label>
                    <input type="text" name="_NameProduct" id="_NameProduct" class="form-control" placeholder="Nhập tên sản phầm" aria-describedby="name_text">
                    <small id="name_text" class="text-muted">Nhập tên sản phẩm</small>
                  </div>  
                   <div class="form-group">
                    <label for="_Price">Giá sản phẩm sản phẩm</label>
                    <input type="text" name="_Price" id="_Price" class="form-control" placeholder="Nhập giá sản phẩm" aria-describedby="name_text">
                    <small id="name_text" class="text-muted">Giá sản phẩm sản phẩm</small>
                  </div>  
                     <div class="form-group">
                    <label for="_Info">Nhập thông tin sản phẩm</label>
                    <input type="text" name="_Info" id="_Info" class="form-control" placeholder="Nhập thông tin sản phẩm" aria-describedby="name_text">
                    <small id="name_text" class="text-muted">Nhập thông tin sản phẩm</small>
                  </div>  
                 
                  <div class="form-group">
                    <label for="_Image">Đường link ảnh</label>
                    <input type="text" name="_Image" id="_Image" class="form-control" placeholder="Đường link ảnh" aria-describedby="name_text">
                    <small id="name_text" class="text-muted">Đường link ảnh</small>
                  </div> 
                    <div class="form-group">
                    <label for="_Category">Thể loại</label>
                    <input type="text" name="_Category" id="_Category" class="form-control" placeholder="Thể loại" aria-describedby="name_text">
                    <small id="name_text" class="text-muted">Thể loại</small>
                  </div>
                 
                   <div class="form-group">
                    <label for="_Sold">Đã bán</label>
                    <input type="text" name="_Sold" id="_Sold" class="form-control" placeholder="Thể loại" aria-describedby="name_text">
                    <small id="name_text" class="text-muted">Đã bán</small>
                  </div>

                  <button type="submit" class="btn btn-primary">Thêm mới</button>
                </form>
                </div>
          </div>
      </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>